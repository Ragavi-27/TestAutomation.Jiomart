<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite parallel="tests" thread-count="5" name="Jiomart Test Automation Suite">
	<!-- Jiomart Test Automation Suite -->
	<listeners>
		<listener class-name="com.qa.utility.Reporting" />
	</listeners>
	<parameter name="Url" value="https://www.jiomart.com" />	
	
	<test parallel="classes" thread-count="1" name="Functional Testing - Chrome">
		<parameter name="Browser" value="Chrome" />		
		<classes>
			<class name="com.qa.testscript.TC_JiomartFilters_001" />
			<class name="com.qa.testscript.TC_JiomartFilters_002" />
			<class name="com.qa.testscript.TC_JiomartFilters_003"/>
		</classes>
	</test>

	<!-- Functional Testing -->
	<test thread-count="5" name="Functional Testing - Edge" parallel="classes">
	<parameter name="Browser" value="Chrome"></parameter>
	<classes>
	<class name="com.qa.testscript.TC_JiomartFilters_004" />
	<class name="com.qa.testscript.TC_JiomartFilters_005" />
	<class name="com.qa.testscript.TC_JiomartFilters_007" />
	</classes>
	</test>	
	<!-- Functional Testing -->
</suite>







 



                                                                               